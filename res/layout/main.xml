<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Toys"
                android:id="@+id/btoys"
                android:layout_weight="0.15"
                android:clickable="true"
                android:layout_gravity="center"/>
        <Button
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Food"
                android:id="@+id/bfood"
                android:layout_weight="0.15"
                android:clickable="true" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Fucapo"
                android:id="@+id/bext."
                android:layout_weight="0.15"
                android:clickable="true" android:layout_gravity="center"/>
        <Button
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:id="@+id/button" android:layout_weight="0.15" android:layout_gravity="center"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <ImageView
                android:layout_width="360dip"
                android:layout_height="400dip"
                android:id="@+id/Avatar"
                android:layout_gravity="center"
                android:background="@drawable/ic_launcher"
                android:clickable="false"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Happiness"
                    android:layout_weight="0.4"
                    android:textColor="#ffffffff"
                    android:textSize="18dip"/>
            <Space android:layout_width="20px" android:layout_height="20px" android:layout_weight="0.1"
                   android:id="@+id/space2"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hunger"
                    android:layout_weight="0.4"
                    android:textSize="18dip"
                    android:textColor="#ffffffff"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:id="@+id/PBHappines"
                    android:layout_weight="0.45"
                    android:clickable="true"
                    android:background="#ff00ff00"/>
            <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_weight="0.1"/>
            <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:id="@+id/PBHunger"
                    android:layout_weight="0.45"
                    android:background="#ffff0000"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/linearLayout2">
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="Energi"
                      android:layout_weight="0.4"
                      android:textColor="#ffffffff"
                      android:textSize="18dip"/>
            <Space android:layout_width="20px" android:layout_height="20px" android:layout_weight="0.1"
                   android:id="@+id/space3"/>
            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="Thirst"
                      android:layout_weight="0.4"
                      android:textColor="#ffffffff"
                      android:textSize="18dip"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">
            <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="12dp"
                    android:id="@+id/progressBar"
                    android:layout_weight="0.5"
                    android:clickable="true"
                    android:background="#ffff00ff"
                    android:focusableInTouchMode="true"/>
            <Space android:layout_width="20px"
                   android:layout_height="20px"
                   android:layout_weight="0.1"
                   android:id="@+id/space"/>
            <ProgressBar android:layout_width="0dp"
                         android:layout_height="12dp"
                         android:id="@+id/progressBar2"
                         android:layout_weight="0.5"
                         android:background="#FF0000FF"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

